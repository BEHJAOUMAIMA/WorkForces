<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/workforces" />
        <property name="username" value="root" />
        <property name="password" value="" />
    </bean>

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="packagesToScan" value="example.com.entities" />
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <property name="database" value="MYSQL" />
                <property name="showSql" value="true" />
            </bean>
        </property>
    </bean>


    <bean id="employeeSingleton" class="example.com.entities.Employee">
        <property name="id" value="1" />
        <property name="fullname" value="John Doe" />
        <property name="salary" value="50000.0" />
    </bean>

    <bean id="employeePrototype" class="example.com.entities.Employee" scope="prototype">
        <property name="id" value="2" />
        <property name="fullname" value="Jane Smith" />
        <property name="salary" value="60000.0" />
    </bean>

    <bean id="departmentSingleton" class="example.com.entities.Department">
        <property name="id" value="101" />
        <property name="name" value="Ressources Humaines" />
        <property name="description" value="Some description for this department" />
    </bean>

    <bean id="departmentPrototype" class="example.com.entities.Department" scope="prototype">
        <property name="id" value="102" />
        <property name="name" value="DÃ©veloppement" />
        <property name="description" value="Description for this department" />
    </bean>


</beans>